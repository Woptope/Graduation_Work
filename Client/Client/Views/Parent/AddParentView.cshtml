
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Client.Models.AccountModel



<br>
<center>
    <h1>Добавление Родителя</h1>
</center>
<div align="center">
    @using (Html.BeginForm("AddAccount", "Parent", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <table cellpadding="5" style="width: 20%">
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Логин: </span>
                    </div>
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Пароль: </span>
                    </div>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })

                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">ФИО: </span>
                    </div>
                    @Html.TextBoxFor(m => m.Fio, new { @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Телефон: </span>
                    </div>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Email: </span>
                    </div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Дата Рождения: </span>
                    </div>
                    @Html.TextBoxFor(m => m.Birthsday, new { @class = "form-control", id = "Birthsday" })

                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Многодетная семья: </span>
                    </div>
                    @Html.CheckBoxFor(m => m.LargeFamilie, new { @class = "form-control"})
                </div>
            </td>
        </tr>

        <tr>
            <td align="center">
                <input type="submit" class="btn btn-primary" value="Добавить" />
            </td>
        </tr>
    </table>
        @Html.HiddenFor(m => m.AccountId)
        @Html.HiddenFor(m => m.AccountType)
        @Html.HiddenFor(m => m.AccountTypeId)
        @Html.HiddenFor(m => m.ParentId)
        @Html.HiddenFor(m => m.UserId)
    }
</div>
<script>
    $(document).ready(function () {
        $("#Birthsday").kendoDatePicker({
            dateInput: false,
            format: 'dd/MM/yyyy'
        });
    });
</script>


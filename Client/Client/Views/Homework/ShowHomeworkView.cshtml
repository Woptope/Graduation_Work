
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Client.Models.HomeworkModel

    <div class="jumbtron">
        <br>
        <center>
            <h1>Просмотр Д/З</h1>
        </center>
        <br>
        <form style="margin-left: 30px">
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-form-label">Название:</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.Name, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-form-label">Описание:</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.Description, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-form-label">Дата:</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.HomeWorkDateTimeStr, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-form-label">Педагог:</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.TeacherFio, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Ссылка на доп файлы:</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.LinkFile, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-form-label">Тип:</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.HomeworkType, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-1 col-form-label">Группы:</label>
                <div class="col-sm-2">
                    @Html.TextAreaFor(m => m.GroupsForShow, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
            </div>
            @Html.ActionLink("Перейти в чат", "ShowHomeworkChat", "HomeworkChat", new { homeworkId = Model.HomeworkId }, new { @class = "btn btn-sm btn-outline-danger", style = "margin-left: 100px" })
        </form>
    </div>

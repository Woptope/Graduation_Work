
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Client.Models.ServerModels.MessageType

<br>
<center>
    <h1>Добавление Типа Сообщения</h1>
</center>
<div align="center">
    @using (Html.BeginForm("AddMessageType", "MessageType", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table cellpadding="5" style="width: 20%">
            <tr>
                <td>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Тип: </span>
                        </div>
                        @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
                    </div>
                </td>
            </tr>

            <tr>
                <td align="center">
                    <input type="submit" class="btn btn-primary" value="Добавить" />
                </td>
            </tr>
        </table>
    }
</div>


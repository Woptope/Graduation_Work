
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Client.Models.EventModel
<div class="jumbtron">
    <br>
    <center>
        <h1>Просмотр Мероприятия</h1>
    </center>
    <br>
    <form style="margin-left: 30px">
        <div class="form-group row">
            <b><label  class="col-sm-1 col-form-label">Название:</label></b>
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.Name, new { @readonly = true, @class = "form-control-plaintext" })
            </div>
        </div>
        <div class="form-group row">
            <b><label  class="col-sm-1 col-form-label">Описание:</label></b>
            <div class="col-sm-3">
                @Html.TextAreaFor(m => m.Description, new { @readonly = true, @class = "form-control-plaintext" })
            </div>
        </div>
        <div class="form-group row">
            <b><label class="col-sm-2 col-form-label">Дата:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label></b>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.EventDateTimeStr, new { @readonly = true, @class = "form-control-plaintext" })
                </div>
        </div>
        <div class="form-group row">
            <b><label class="col-sm-2 col-form-label">Тип:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label></b>          
            <div class="col-sm-2">
                @Html.TextBoxFor(m => m.EventType, new { @readonly = true, @class = "form-control-plaintext" })
            </div>
        </div>
        <div class="form-group row">
            <b><label class="col-sm-1 col-form-label">Группы:&nbsp;&nbsp;&nbsp;</label></b>           
            <div class="col-sm-3">
                @Html.TextAreaFor(m => m.GroupsForShow, new { @readonly = true, @class = "form-control-plaintext" })
            </div>
        </div>
        @Html.ActionLink("Перейти в чат", "ShowEventChat", "EventChat", new { eventId = Model.EventId }, new { @class = "btn btn-outline-danger", style = "margin-left: 100px" })
    </form>
</div>
